{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "prettier"
  ],
  "plugins": ["import"],
  "rules": {
    "no-undef": "off",
    "no-unused-vars": "off",
    "import/order": [
      "warn",
      {
        "groups": [["builtin", "external"], ["internal"], ["parent", "sibling", "index"]],
        "alphabetize": { "order": "asc", "caseInsensitive": true },
        "newlines-between": "always"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  }
}
